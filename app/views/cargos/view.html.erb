<script type="text/javascript">

    $(function(){
        <%= tab_fnc(:tabs => 'tabs')%>
        <%= button_fnc(:obj=>'#btn_voltar', :icon=>'ui-icon-arrowreturnthick-1-w', :text => true) %>
        <%= button_fnc(:obj=>'#btn_edit', :icon=>'ui-icon-pencil', :text => true) %>
    });

</script>

<%= box do %>
    <%= button(:label => 'Voltar',  :href => url_for(:action => 'index'), :id => 'btn_voltar')%>
    <%= button(:label => 'Editar',  :href => url_for(:action => 'form', :id => @cargo.id), :id => 'btn_edit')%>
<% end %>

<%= tab (:name => 'tabs', :tabs => 'tabs-1', :labels => 'Cargos') do |t| %>

    <div id="<%= t[0] %>">

        <label>Cargo:</label> <div class="labelform"><%= @cargo.nome %></div>

    </div>

<% end %>